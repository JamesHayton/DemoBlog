<title><%= @page_title %> | Blog Name Here</title>
<%= stylesheet_link_tag :all %>
</head>
<body>
<div id="wrapper">
<% if user_signed_in? %>
<%= render :partial => "shared/admin_sidebar" %>
<% else %>
<%= render :partial => "shared/sidebar" %>
<% end %>
