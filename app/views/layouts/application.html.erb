<% unless flash[:notice] %>
<% else %>
<div class="flash notice"><%= flash[:notice] %></div>
<% end %>
<div id="main">

<%= yield %>
</div><!--/main -->
</div><!-- /content -->

</div><!-- /wrapper -->
<%= javascript_include_tag 'jquery-1.4.min' %> 
<%= javascript_include_tag 'rails' %>
</body>
